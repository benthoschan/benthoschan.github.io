	journal = {Estuarine, Coastal and Shelf Science},
	author = {Porubsky, W. P. and Weston, N. B. and Joye, S. B.},
	year = {2009},
	keywords = {anammox, denitrification, benthic microalgae, dissimilatory nitrate reduction to ammonium, intertidal sediments},
