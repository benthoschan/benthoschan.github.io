@article{radiarta_gis-based_2008,
	title = {{GIS}-based multi-criteria evaluation models for identifying suitable sites for {Japanese} scallop ({Mizuhopecten} yessoensis) aquaculture in {Funka} {Bay}, southwestern {Hokkaido}, {Japan}},
