	author = {Thornton, Daniel C O and Underwood, Graham J C and Nedwell, David B.},
	year = {1999},
	keywords = {Ammonium, Ammonium uptake, Diatom, Emersion period, Estuarine, Microphytobenthos, Nutrient exchange},
	pages = {11--20}
}

