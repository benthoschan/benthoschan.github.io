	pages = {17},
	file = {Full Text PDF:C\:\\Users\\chand\\Zotero\\storage\\4DKE2TVD\\Koretsky et al. - 2002 - Quantifying bioirrigation using ecological paramet.pdf:application/pdf;Snapshot:C\:\\Users\\chand\\Zotero\\storage\\GDS37FUY\\1467-4866-3-17.html:text/html}
}

@article{hale_characterizations_2014,
