@article{gruber_marine_2008,
	title = {The {Marine} {Nitrogen} {Cycle}: {Overview} and {Challenges} {BT} - {Nitrogen} in the {Marine} {Environment}},
	url = {papers3://publication/uuid/0062D8B9-1D1B-490B-B5B8-793C0D4B8D9D},
